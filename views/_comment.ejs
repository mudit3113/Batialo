<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<li id="comment-<%=comment._id%>" >
    <p>
        <% if (locals.user ){ %>
            <%if(locals.user.id == comment.user.id || locals.user.id == post.user.id ){%>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment._id %>"><i class="fa fa-window-close"></i></a>
            </small>
            <%}%>
        <%}%> 
      
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
        <br>
        <small>
            <%if(locals.user){ %>
                <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment"> <i class="fa fa-heart" style="color:red"></i> &nbsp <%= comment.likes.length %> Likes </a>
            <%}else{%>
                <i class="fa fa-heart" style="color:red"></i> &nbsp <%= comment.likes.length %> Likes
            <%}%>
        </small>
      
    </p>
</li>